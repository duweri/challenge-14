<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danielle's Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css" />
  </head>
<main class="container mt-5">
    <div class="row">
      <div class="col-12">
        <h1 class="mb-4">Dashboard</h1>
        <a href="/newpost" class="btn btn-primary">Create a New Blog Post</a>
      </div>
    </div>
    <br>
    <h1 class="mb-4">Tech Blog Contributions:</h1>
    {{#each posts}}
      <div class="post-container post mb-3">
        <h2><a href="/post/{{id}}" class="text-decoration-none text-reset">{{title}}</a></h2>
        <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
        <a href="/editpost/{{id}}" class="btn btn-warning">Edit Post</a>
        <button class="btn btn-danger delete-post" data-post-id="{{id}}">Delete</button>
      </div>
    {{/each}}
  </main>